<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_column_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dim_null"
    android:paddingLeft="@dimen/dim_null"
    android:paddingRight="@dimen/dim_null"
    android:paddingTop="@dimen/dim_null"
    tools:context=".ColumnSelect"
    style="@style/MyThemeLayout">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:id="@+id/toolbar_column"
        app:title="@string/action_column_select"
        app:navigationIcon="@drawable/ic_navigate_before"
        app:titleTextColor="@android:color/background_light"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/msj_select_the_column_for"
        android:id="@+id/column_select_TextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        style="@style/MyThemeTextView"
        android:textSize="18sp"
        android:layout_below="@+id/toolbar_column"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/column_select_ListView"
        style="@style/MyThemeListView"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_below="@+id/column_select_TextView"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin" />


</RelativeLayout>
