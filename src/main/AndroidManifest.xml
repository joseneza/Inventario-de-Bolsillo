<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jose.prieto.mysmallbusinessbyneza">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Inicio"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Explorar"
            android:label="@string/label_explorar"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DatosImportar"
            android:label="@string/action_new_data_base"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DatosExportar"
            android:label="@string/action_export"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MostrarImagen"
            android:label="@string/label_mostrar_imagen"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="screenSize|orientation" />
        <activity
            android:name=".AcercaDe"
            android:screenOrientation="portrait" />
        <activity
            android:name=".BusquedaAvanzada"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>/--Enfoca el EditText en forma correcta--/
        <activity
            android:name=".ResultadosBusqueda"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Ajustes"
            android:label="@string/action_settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MostrarLista"
            android:label="@string/action_show_list"
            android:windowSoftInputMode="adjustPan"/>/--Enfoca el EditText en forma correcta--/
        <activity
            android:name=".ColumnSelect"
            android:label="@string/action_column_select"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>